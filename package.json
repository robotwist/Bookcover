{
  "name": "bookcover",
  "version": "1.0.0",
  "description": "A browser extension to enhance Facebook experience by removing distractions",
  "main": "src/content.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "webpack --mode production && npm run copy-files",
    "copy-files": "cp manifest.json dist/ && cp -r src/assets dist/",
    "dev": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-console": "^1.2.2",
    "jsdom": "^24.0.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
